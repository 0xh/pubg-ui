{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
